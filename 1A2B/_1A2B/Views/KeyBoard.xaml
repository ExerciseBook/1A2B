<UserControl
    x:Class="_1A2B.Views.KeyBoard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:localViews="using:_1A2B.Views"
    mc:Ignorable="d"
    d:DesignHeight="400"
    d:DesignWidth="300">




    <!-- x:Name="Root" -->

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <localViews:SingleButton Grid.Column="0" Grid.Row="0" ThisValue="Num1" ThisContent="1"/>
        <localViews:SingleButton Grid.Column="1" Grid.Row="0" ThisValue="Num2" ThisContent="2"/>
        <localViews:SingleButton Grid.Column="2" Grid.Row="0" ThisValue="Num3" ThisContent="3"/>
        <localViews:SingleButton Grid.Column="0" Grid.Row="1" ThisValue="Num4" ThisContent="4"/>
        <localViews:SingleButton Grid.Column="1" Grid.Row="1" ThisValue="Num5" ThisContent="5"/>
        <localViews:SingleButton Grid.Column="2" Grid.Row="1" ThisValue="Num6" ThisContent="6"/>
        <localViews:SingleButton Grid.Column="0" Grid.Row="2" ThisValue="Num7" ThisContent="7"/>
        <localViews:SingleButton Grid.Column="1" Grid.Row="2" ThisValue="Num8" ThisContent="8"/>
        <localViews:SingleButton Grid.Column="2" Grid.Row="2" ThisValue="Num9" ThisContent="9"/>
        <localViews:SingleButton Grid.Column="1" Grid.Row="3" ThisValue="Num0" ThisContent="0"/>

        <localViews:SingleButton Grid.Column="2" Grid.Row="3" ThisValue="Enter" x:Uid="UI_Keyboard_Button_Enter"/>
        <localViews:SingleButton Grid.Column="0" Grid.Row="3" ThisValue="Backspace" x:Uid="UI_Keyboard_Button_Backspace"/>

    </Grid>
</UserControl>
