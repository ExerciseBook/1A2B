<UserControl
    
    x:Class="_1A2B.KeyBoard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- x:Name="Root" -->

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- <Button Grid.Column="0" Grid.Row="0" HorizontalContentAlignment="Stretch" HorizontalAlignment="Center" VerticalAlignment="Center" Width="{Binding ElementName=Root, Path=Width}" Height="{Binding ElementName=Root, Path=Height}"> -->
        <Button Grid.Column="0" Grid.Row="0" HorizontalContentAlignment="Stretch" HorizontalAlignment="Center" VerticalAlignment="Center" Width="114" Height="116">
            <TextBlock Text="1" TextAlignment="Center" FontSize="54"/>
        </Button>
        <Button Grid.Column="1" Grid.Row="0" HorizontalContentAlignment="Stretch" HorizontalAlignment="Center" VerticalAlignment="Center" Width="114" Height="116">
            <TextBlock Text="2" TextAlignment="Center" FontSize="54"/>
        </Button>
        <Button Grid.Column="2" Grid.Row="0" HorizontalContentAlignment="Stretch" HorizontalAlignment="Center" VerticalAlignment="Center" Width="114" Height="116">
            <TextBlock Text="3" TextAlignment="Center" FontSize="54"/>
        </Button>
        <Button Grid.Column="0" Grid.Row="1" HorizontalContentAlignment="Stretch" HorizontalAlignment="Center" VerticalAlignment="Center" Width="114" Height="116">
            <TextBlock Text="4" TextAlignment="Center" FontSize="54"/>
        </Button>
        <Button Grid.Column="1" Grid.Row="1" HorizontalContentAlignment="Stretch" HorizontalAlignment="Center" VerticalAlignment="Center" Width="114" Height="116">
            <TextBlock Text="5" TextAlignment="Center" FontSize="54"/>
        </Button>
        <Button Grid.Column="2" Grid.Row="1" HorizontalContentAlignment="Stretch" HorizontalAlignment="Center" VerticalAlignment="Center" Width="114" Height="116">
            <TextBlock Text="6" TextAlignment="Center" FontSize="54"/>
        </Button>
        <Button Grid.Column="0" Grid.Row="2" HorizontalContentAlignment="Stretch" HorizontalAlignment="Center" VerticalAlignment="Center" Width="114" Height="116">
            <TextBlock Text="7" TextAlignment="Center" FontSize="54"/>
        </Button>
        <Button Grid.Column="1" Grid.Row="2" HorizontalContentAlignment="Stretch" HorizontalAlignment="Center" VerticalAlignment="Center" Width="114" Height="116">
            <TextBlock Text="8" TextAlignment="Center" FontSize="54"/>
        </Button>
        <Button Grid.Column="2" Grid.Row="2" HorizontalContentAlignment="Stretch" HorizontalAlignment="Center" VerticalAlignment="Center" Width="114" Height="116">
            <TextBlock Text="9" TextAlignment="Center" FontSize="54"/>
        </Button>
        <Button Grid.Column="1" Grid.Row="3" HorizontalContentAlignment="Stretch" HorizontalAlignment="Center" VerticalAlignment="Center" Width="114" Height="116">
            <TextBlock Text="0" TextAlignment="Center" FontSize="54"/>
        </Button>
    </Grid>
</UserControl>
