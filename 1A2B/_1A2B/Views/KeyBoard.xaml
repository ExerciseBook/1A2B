<UserControl
    x:Class="_1A2B.KeyBoard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0" Grid.Row="0" HorizontalContentAlignment="Stretch" HorizontalAlignment="Center" VerticalAlignment="Center">
            1
        </Button>
        <Button Grid.Column="1" Grid.Row="0" HorizontalContentAlignment="Stretch" HorizontalAlignment="Center" VerticalAlignment="Center">
            2
        </Button>
        <Button Grid.Column="2" Grid.Row="0" HorizontalContentAlignment="Stretch" HorizontalAlignment="Center" VerticalAlignment="Center">
            3
        </Button>
        <Button Grid.Column="0" Grid.Row="1" HorizontalContentAlignment="Stretch" HorizontalAlignment="Center" VerticalAlignment="Center">
            4
        </Button>
        <Button Grid.Column="1" Grid.Row="1" HorizontalContentAlignment="Stretch" HorizontalAlignment="Center" VerticalAlignment="Center">
            5
        </Button>
        <Button Grid.Column="2" Grid.Row="1" HorizontalContentAlignment="Stretch" HorizontalAlignment="Center" VerticalAlignment="Center">
            6
        </Button>
        <Button Grid.Column="0" Grid.Row="2" HorizontalContentAlignment="Stretch" HorizontalAlignment="Center" VerticalAlignment="Center">
            7
        </Button>
        <Button Grid.Column="1" Grid.Row="2" HorizontalContentAlignment="Stretch" HorizontalAlignment="Center" VerticalAlignment="Center">
            8
        </Button>
        <Button Grid.Column="2" Grid.Row="2" HorizontalContentAlignment="Stretch" HorizontalAlignment="Center" VerticalAlignment="Center">
            9
        </Button>
        <Button Grid.Column="1" Grid.Row="3" HorizontalContentAlignment="Stretch" HorizontalAlignment="Center" VerticalAlignment="Center">
            0
        </Button>
    </Grid>
</UserControl>
